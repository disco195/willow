{
    "main": "./src/index.ts",
    "type": "module",
    "devDependencies": {
        "@types/cookie-parser": "1.4.2",
        "@types/cookie-session": "2.0.39",
        "@types/cors": "2.8.6",
        "@types/express": "4.17.6",
        "@types/mongodb": "3.5.14",
        "@types/node": "latest",
        "@types/passport": "1.0.3",
        "@types/passport-google-oauth20": "2.0.3",
        "@types/yargs": "15.0.4",
        "prettier": "latest",
        "source-map-support": "latest",
        "typescript": "latest"
    },
    "dependencies": {
        "cookie-parser": "1.4.5",
        "cookie-session": "1.4.0",
        "cors": "2.8.5",
        "express": "4.17.1",
        "mongodb": "3.5.6",
        "passport": "0.4.1",
        "passport-google-oauth20": "2.0.0",
        "yargs": "15.3.1"
    },
    "config": {
        "java-tracer": "cd ../tracers/java/ && make run --silent",
        "python-tracer": "cd ../tracers/python/ && make run --silent"
    },
    "scripts": {
        "types": "mkdir --parents ./src/types && cp ../types/* ./src/types",
        "format": "shopt -s extglob globstar && prettier --config ./.prettierrc.json -c --write ./src/**/*.ts* && shopt -u extglob globstar",
        "debug": "tsc && node --es-module-specifier-resolution node --require source-map-support/register --nolazy --inspect-brk -- ./dist/index.js",
        "start": "tsc && node --es-module-specifier-resolution node --require source-map-support/register -- ./dist/index.js",
        "debug:dev": "npm run debug -- --tracer java \"${npm_package_config_java_tracer}\" --tracer python \"${npm_package_config_python_tracer}\"",
        "start:dev": "npm run start -- --tracer java \"${npm_package_config_java_tracer}\" --tracer python \"${npm_package_config_python_tracer}\""
    }
}
