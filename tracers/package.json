{
    "main": "./src/index.ts",
    "devDependencies": {
        "@types/express": "^4.16.1",
        "@types/jest": "^24.0.5",
        "@types/node": "^10.12.26",
        "@types/npmlog": "^4.1.1",
        "@types/yargs": "^12.0.9",
        "jest": "^24.1.0",
        "prettier": "^1.16.4",
        "tslint": "^5.12.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.3.3"
    },
    "dependencies": {
        "express": "^4.16.4",
        "npmlog": "^4.1.2",
        "protobufjs": "^6.8.8",
        "rxjs": "^6.4.0",
        "yargs": "^12.0.5"
    },
    "config": {
        "main": "./dist/src/index.js",
        "test": "./dist/test",
        "java_supplier": "cd ../tracerJava/ && source ./package.sh build && source ./package.sh start",
        "python_supplier": "cd ../tracerPython/ && source ./package.sh start",
        "java_supplier_test": "cd ../tracerJava/ && source ./package.sh build && source ./package.sh start --test",
        "python_supplier_test": "cd ../tracerPython/ && source ./package.sh start --test"
    },
    "scripts": {
        "lint": "tslint --config ../tslint.json --project ./package.json && prettier --config ./.prettierrc.js --check --write './src/**/!(*.js|*.d.ts)'",
        "protobuf": "mkdir --parent ./src/protobuf && pbjs --target static-module --es6 --force-message --out ./src/protobuf/protocol.js --path ../protobuf/ -- ../protobuf/* && pbts --out ./src/protobuf/protocol.d.ts -- ./src/protobuf/protocol.js",
        "test": "tsc && jest --coverage --detectOpenHandles --forceExit -- $npm_package_config_test",
        "debug": "tsc && node --require source-map-support/register --nolazy --inspect-brk -- $npm_package_config_main",
        "debug-tracers": "npm run debug -- --tracer java \"$npm_package_config_java_supplier\" --tracer python \"$npm_package_config_python_supplier\"",
        "start": "tsc && node --require source-map-support/register -- $npm_package_config_main",
        "start-tracers": "npm run start -- --tracer java \"$npm_package_config_java_supplier\" --tracer python \"$npm_package_config_python_supplier\"",
        "start-tracers-test": "npm run start -- --tracer java \"$npm_package_config_java_supplier_test\" --tracer python \"$npm_package_config_python_supplier_test\""
    }
}