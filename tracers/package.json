{
    "main": "./src/index.ts",
    "devDependencies": {
        "@types/express": "^4.16.1",
        "@types/jest": "^24.0.11",
        "@types/node": "^10.12.26",
        "@types/npmlog": "^4.1.1",
        "@types/yargs": "^12.0.9",
        "jest": "^24.1.0",
        "prettier": "^1.16.4",
        "tslint": "^5.12.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.3.3"
    },
    "dependencies": {
        "express": "^4.16.4",
        "npmlog": "^4.1.2",
        "protobufjs": "^6.8.8",
        "rxjs": "^6.4.0",
        "yargs": "^12.0.5"
    },
    "config": {
        "java_tracer": "cd ../tracerJava/ && source ./package.sh build && source ./package.sh start",
        "python_tracer": "cd ../tracerPython/ && source ./package.sh start"
    },
    "scripts": {
        "debug-base": "tsc && node --require source-map-support/register --nolazy --inspect-brk -- ./dist/src/index.js",
        "start-base": "tsc && node --require source-map-support/register -- ./dist/src/index.js",
        "format": "tslint --config ../tslint.json --project ./package.json && prettier --config ./.prettierrc.js --check --write './src/**/!(*.js|*.d.ts)'",
        "protobuf": "mkdir --parent ./src/protobuf && pbjs --target static-module --es6 --force-message --out ./src/protobuf/protocol.js --path ../protobuf/ -- ../protobuf/* && pbts --out ./src/protobuf/protocol.d.ts -- ./src/protobuf/protocol.js",
        "test": "tsc && jest --coverage --detectOpenHandles --forceExit -- ./dist/test",
        "debug": "npm run debug-base -- --tracer java \"$npm_package_config_java_tracer\" --tracer python \"$npm_package_config_python_tracer\"",
        "start": "npm run start-base -- --tracer java \"$npm_package_config_java_tracer\" --tracer python \"$npm_package_config_python_tracer\"",
        "start-test": "npm run start-base -- --tracer java \"$npm_package_config_java_tracer --test\" --tracer python \"$npm_package_config_python_tracer --test\""
    }
}
