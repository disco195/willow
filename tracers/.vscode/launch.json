    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug-tracers"
            ],
            "args": [
                "--",
                "--port",
                "${input:port}"
            ],
            "port": 9229
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "cwd": "${workspaceFolder}",
            "processId": "${command:PickProcess}"
        }
    ],
    "inputs": [
        {
            "id": "port",
            "type": "promptString",
            "default": "8001",
            "description": "port",
        }
    ]
}