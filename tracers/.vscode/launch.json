    "version": "0.2.0",
    "configurations": [
        {
            "name": "NPM debug",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 9229
        },
        {
            "name": "NPM debug-tracers",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug-tracers"
            ],
            "port": 9229
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "cwd": "${workspaceFolder}",
            "processId": "${command:PickProcess}"
        }
    ]
}