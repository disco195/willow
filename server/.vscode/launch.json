{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "debug"],
            "args": ["--", "--mode", "${input:mode}", "--port", "${input:port}"],
            "port": 9229
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "cwd": "${workspaceFolder}",
            "processId": "${command:PickProcess}"
        }
    ],
    "inputs": [
        {
            "id": "mode",
            "type": "promptString",
            "default": "proto",
            "description": "mode"
        },
        {
            "id": "port",
            "type": "promptString",
            "default": "8002",
            "description": "port"
        }
    ]
}
