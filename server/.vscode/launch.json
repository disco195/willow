{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug"
            ],
            "args": [
                "--",
                "--port",
                "${input:port}",
                "--secret",
                "${input:secret}",
                "--tracers",
                "${input:tracers}"
            ],
            "port": 9229
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "cwd": "${workspaceFolder}",
            "processId": "${command:PickProcess}"
        }
    ],
    "inputs": [
        {
            "id": "port",
            "type": "promptString",
            "default": "8001",
            "description": "port",
        },
        {
            "id": "secret",
            "type": "promptString",
            "default": "secret",
            "description": "secret",
        },
        {
            "id": "tracers",
            "type": "promptString",
            "default": "http://localhost:8002",
            "description": "tracers"
        }
    ]
}