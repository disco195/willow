{
    "main": "./src/index.ts",
    "devDependencies": {
        "@types/cors": "^2.8.4",
        "@types/express": "^4.16.1",
        "@types/express-session": "^1.15.12",
        "@types/jest": "^24.0.11",
        "@types/node": "^11.11.3",
        "@types/npmlog": "^4.1.1",
        "@types/yargs": "^12.0.9",
        "jest": "^24.5.0",
        "prettier": "^1.16.4",
        "tslint": "^5.14.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.3.3333"
    },
    "dependencies": {
        "axios": "^0.18.0",
        "cors": "^2.8.5",
        "express": "^4.16.4",
        "express-session": "^1.15.6",
        "npmlog": "^4.1.2",
        "passport": "^0.4.0",
        "passport-google-oauth": "^2.0.0",
        "protobufjs": "^6.8.8",
        "yargs": "^13.2.2"
    },
    "scripts": {
        "format": "shopt -s extglob globstar && tslint -c ./tslint.json -p ./package.json -e ./src/protobuf/protocol.ts && prettier --config ./.prettierrc.js -c --write ./src/**/!\\(protocol\\).ts* && shopt -u extglob globstar",
        "protobuf": "mkdir -p ./src/protobuf && pbjs -t static-module --es6 --force-message --out ./src/protobuf/protocol.js -p ../protobuf/ -- ../protobuf/*.proto ../protobuf/services/*.proto  && pbts -o ./src/protobuf/protocol.d.ts -- ./src/protobuf/protocol.js",
        "test": "tsc && jest --coverage --detectOpenHandles --forceExit -- ./dist/test",
        "debug": "tsc && node -r source-map-support/register --nolazy --inspect-brk -- ./dist/src/index.js",
        "start": "tsc && node -r source-map-support/register -- ./dist/src/index.js"
    }
}
