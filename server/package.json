{
    "main": "./src/index.ts",
    "devDependencies": {
        "@types/express": "^4.16.1",
        "@types/express-session": "^1.15.12",
        "@types/jest": "^24.0.11",
        "@types/node": "^11.11.3",
        "@types/npmlog": "^4.1.1",
        "@types/yargs": "^12.0.9",
        "jest": "^24.5.0",
        "prettier": "^1.16.4",
        "tslint": "^5.14.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.3.3333"
    },
    "dependencies": {
        "axios": "^0.18.0",
        "express": "^4.16.4",
        "express-session": "^1.15.6",
        "npmlog": "^4.1.2",
        "passport": "^0.4.0",
        "passport-google-oauth": "^2.0.0",
        "protobufjs": "^6.8.8",
        "yargs": "^13.2.2"
    },
    "scripts": {
        "format": "tslint --config ./tslint.json --project ./package.json && shopt -s globstar && prettier --config ./.prettierrc.js --check --write ./src/**/*[^.][^d].ts && shopt -u globstar",
        "protobuf": "mkdir --parent ./src/protobuf && pbjs --target static-module --es6 --force-message --out ./src/protobuf/protocol.js --path ../protobuf/ -- ../protobuf/*.proto ../protobuf/services/*.proto  && pbts --out ./src/protobuf/protocol.d.ts -- ./src/protobuf/protocol.js",
        "test": "tsc && jest --coverage --detectOpenHandles --forceExit -- ./dist/test",
        "debug": "tsc && node --require source-map-support/register --nolazy --inspect-brk -- ./dist/src/index.js",
        "start": "tsc && node --require source-map-support/register -- ./dist/src/index.js"
    }
}
