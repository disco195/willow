{
    "main": "./src/index.ts",
    "type": "module",
    "devDependencies": {
        "@types/cors": "2.8.6",
        "@types/express": "4.17.2",
        "@types/jest": "latest",
        "@types/node": "latest",
        "@types/yargs": "15.0.3",
        "jest": "latest",
        "json-schema-to-typescript": "latest",
        "prettier": "latest",
        "source-map-support": "latest",
        "typescript": "latest"
    },
    "dependencies": {
        "cors": "2.8.5",
        "express": "4.17.1",
        "yargs": "15.1.0"
    },
    "config": {
        "java-tracer": "cd ../tracers/java/ && make run --silent",
        "python-tracer": "cd ../tracers/python/ && make run --silent"
    },
    "scripts": {
        "format": "shopt -s extglob globstar && prettier --config ./.prettierrc.json -c --write ./src/**/*.ts* && shopt -u extglob globstar",
        "schema": "mkdir -p ./src/schema && json2ts -i ../schemas/schema.json -o ./src/schema/schema.ts",
        "debug": "tsc && node --es-module-specifier-resolution node --require source-map-support/register --nolazy --inspect-brk -- ./dist/src/index.js",
        "start": "tsc && node --es-module-specifier-resolution node --require source-map-support/register -- ./dist/src/index.js",
        "test": "tsc && jest --testRegex 'dist/test/.*\\.test\\.js' --",
        "debug:t": "npm run debug -- --tracer java \"$npm_package_config_java_tracer\" --tracer python \"$npm_package_config_python_tracer\"",
        "start:t": "npm run start -- --tracer java \"$npm_package_config_java_tracer\" --tracer python \"$npm_package_config_python_tracer\"",
        "test:t": "export TRACER_JAVA=\"$npm_package_config_java_tracer#public class Main{public static void main(String[] a){}}#error+-\" && export TRACER_PYTHON=\"$npm_package_config_python_tracer##error+-\" && npm run test"
    }
}
